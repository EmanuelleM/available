<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widget"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent">

    <TextView
        android:id="@+id/text_view_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_margin="@dimen/geral_8dp"
        android:text="@string/app_name"
        android:textColor="@color/primaryTextColor"
        android:textSize="@dimen/text_size_24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center"
        android:layout_margin="@dimen/geral_8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_view_nome_viagem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:text="@string/bem_vindo"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/text_size_24sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_view_data_chegada"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/geral_8dp"
                android:textColor="@color/primaryTextColor"
                android:textSize="@dimen/text_size_16sp"
                tools:text="@string/_00_00" />

            <TextView
                android:id="@+id/text_view_data_saida"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primaryTextColor"
                android:textSize="@dimen/text_size_16sp"
                tools:text="@string/_00_00" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left|bottom">

        <TextView
            android:id="@+id/text_view_texto_valor_gasto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/geral_8dp"
            android:text="@string/valor_gasto"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/text_size_24sp" />

        <TextView
            android:id="@+id/text_view_gasto_viagem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/geral_8dp"
            android:gravity="center"
            android:text="@string/_00_00"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/text_size_24sp" />
    </LinearLayout>

</FrameLayout>

