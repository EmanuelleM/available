<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        card_view:cardCornerRadius="4dp"
        android:layout_margin="@dimen/geral_8dp"
        card_view:layout_constraintLeft_toLeftOf="parent"
        card_view:layout_constraintRight_toRightOf="parent"
        card_view:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/geral_8dp">


        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_view_descricao_gasto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/geral_8dp"
                android:layout_marginTop="@dimen/geral_8dp"
                android:padding="@dimen/geral_5dp"
                android:textSize="@dimen/text_size_16sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Belo Horizonte" />

            <TextView
                android:id="@+id/text_view_valor_gasto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/geral_8dp"
                android:layout_marginLeft="@dimen/geral_8dp"
                android:layout_marginRight="@dimen/geral_8dp"
                android:layout_marginStart="@dimen/geral_8dp"
                android:padding="@dimen/geral_5dp"
                android:text="@string/_00_00"
                android:textSize="@dimen/text_size_16sp"
                app:layout_constraintBottom_toBottomOf="@+id/text_view_descricao_gasto"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toRightOf="@+id/text_view_descricao_gasto"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/text_view_descricao_gasto"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/text_view_texto_data_gasto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/geral_8dp"
                android:layout_marginTop="@dimen/geral_8dp"
                android:padding="@dimen/geral_5dp"
                android:text="@string/data_do_gasto"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_view_descricao_gasto" />

            <TextView
                android:id="@+id/text_view_data_gasto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/geral_5dp"
                android:text="@string/mock_data"
                app:layout_constraintBottom_toBottomOf="@+id/text_view_texto_data_gasto"
                app:layout_constraintLeft_toRightOf="@+id/text_view_texto_data_gasto"
                app:layout_constraintTop_toTopOf="@+id/text_view_texto_data_gasto" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>